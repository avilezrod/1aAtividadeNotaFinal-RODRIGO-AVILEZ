<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Soma de Dois Números</title>
  <style>
    #formSoma {
      display: flex;
      gap: 10px;
      align-items: center;
      margin-top: 30px;
    }
  </style>
</head>
<body>
  <form id="formSoma">
    <input type="number" id="num1" placeholder="Primeiro número">
    <input type="number" id="num2" placeholder="Segundo número">
    <button type="button" onclick="somar()">Somar</button>
  </form>
  <p id="resultado"></p>
  <script>
    function somar() {
      const n1 = Number(document.getElementById('num1').value);
      const n2 = Number(document.getElementById('num2').value);
      document.getElementById('resultado').innerText = 'Resultado: ' + (n1 + n2);
    }
  </script>
</body>
</html>
